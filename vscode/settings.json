{
	// search
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"system/": true,
		"temp/": true,
		"library/": true,
		"build/": true,
		"!/system/.ps*": true,
	},
  	// file
	"files.exclude":{
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/.meta": true,
		"library/":true,
		"local/":true,
		"temp/":true,
	},

	// vim
	"vim.easymotion": false,
	"vim.statusBarColorControl": false,
	"vim.hlsearch": true,
	"vim.autoindent": true,
	"vim.useSystemClipboard":true ,
	"vim.leader": "\\",

	"vim.handleKeys": {
		"<C-d>": true,
		"<C-f>":false, 
		"<C-c>": false,
		"<C-v>": false 
	},

	"vim.normalModeKeyBindingsNonRecursive": [
		{
		"before" : ["Z","Z"],
		"commands": [":wq"]
		},
		{
		"before" : ["<leader>","w"],
		"commands": [":w"]
		},
		{
		"before" : ["<leader>","s","p"],
		"commands": [":split"]
		},
		{
		"before" : ["<leader>","v","p"],
		"commands": [":vsplit"]
		},
	], 


	"vim.insertModeKeyBindings": [
		{
		"before" : ["j","k"],
		"after": ["<ESC>"]
		}
	],
  
    // editor
	"editor.tabSize": 4,
	"editor.fontSize": 14,
	"files.autoSave": "off",
	"editor.renderWhitespace": "none",
	"editor.cursorStyle": "line",
	"editor.wordWrap": "off",
	"editor.formatOnSave": false,
	"editor.fontWeight": "normal",
	"editor.lineNumbers": "on",  
	"editor.minimap.enabled": false,

	// workbench
	"workbench.colorTheme": "Darcula",
	"workbench.editor.showIcons": true,
	"go.formatTool": "goimports",
	"go.useLanguageServer": true,
	"workbench.iconTheme": "vscode-icons-mac",
	"workbench.editor.enablePreview": false,
}	