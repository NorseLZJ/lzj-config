syntax on
set showcmd			" Show (partial) command in status line.
set showmatch		" Show matching brackets.
set ignorecase		" Do case insensitive matching
set smartcase		" Do smart case matching
set incsearch		" Incremental search
set autowrite		" Automatically save before commands like :next and :make
set hidden			" Hide buffers when they are abandoned
set mouse=""		" Enable mouse usage (all modes)
set nu
set hls
set so=5
set gcr=a:block-blinkon0
set gcr=a:blinkon0

if has("autocmd")                                                          
		au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif
endif                                                        

let mapleader='\'
let g:mapleader='\'
inoremap <leader>w <Esc>:w<cr>
noremap <leader>w :w<cr>

inoremap jk  <Esc>

inoremap <leader>t <ESC>A
inoremap <leader>h <ESC>I
inoremap <leader>n <ESC>2li

nnoremap <leader>c :noh<CR>
inoremap <leader>c <ESC>:noh<CR>

inoremap <leader>sh <ESC>:sh<CR>
nnoremap <leader>sh <ESC>:sh<CR>

inoremap <leader>vp <ESC>:vsplit<CR>
inoremap <leader>sp <ESC>:split<CR>
nnoremap <leader>vp <ESC>:vsplit<CR>
nnoremap <leader>sp <ESC>:split<CR>

noremap <silent> [b :bprevious<CR>
noremap <silent> [n :bnext<CR>

noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k
noremap <C-l> <C-w>l


